<div style="margin-top: 6rem">
<div class="center">
    <div class="admission" style="margin-top: 6rem;margin-bottom: 6rem;"><form method="POST" action="/admin/upload-notice" >
    <label class="form-label">Title</label>
    <input required name="title" type="text" placeholder="Holiday on account of Festival" />
    <label class="form-label">Description</label>
    <textarea style="height: 180px;resize: none;"required name="description" type="text" placeholder="Description(HTML or plain text)"></textarea>
    <input type="password" name="password" placeholder="Password for updates"/>
    <input name="file" required style="display: none"> 
    <div class="button-container">
    <button type="submit" class="form-button">
        Login
    </button><br />
    <label class="form-label" for="filer">Attachment pdf/image etc. (Click to create)</label>
    <input type="file" id="filer" name="attachment" style="display: none"/>
    </div>
</div>
    </form>
    </div>
</div>
<script>
    let file="";
    const input=document.querySelector("[name=file]");
    document.querySelector("input[type=file]").addEventListener("change", (e)=>{
        const fileReader=new FileReader();
        fileReader.onload=(eve)=>{
            input.value=eve.target.result;
            file=eve.target.result;
        }
        fileReader.readAsDataURL(e.target.files[0]);
    })
</script>