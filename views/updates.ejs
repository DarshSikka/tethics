<div class="updates">
    <form>
        <div style="display: flex;justify-content: space-around;"><input name="filter" class="input-filter"placeholder="filter"/>
        <button type="submit"style="font-size: 50px;"><i class="fas fa-search"></i></button>
    </div>
    </form>
    <% updates.forEach(update=>{ %>
    <% console.log(update) %>
    <a href="/update/<%= update._id %>" class="update-link">
        <div class="update-column">
            <h1><%= update.title %></h1>
            <h5> <%- update.description.substring(0, 40)%>...</h5>
        </div>
        </a>    
        <% }) %>
</div>
<style>
    @import url("/css/updates.css");
</style>